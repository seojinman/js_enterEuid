{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "off",
      {
        "useTabs": false,
        "endOfLine": "auto",
        "quoteProps": "as-needed",
        "singleQuote": false,
        "trailingComma": "es5",
        "parser": "flow"
      }
    ],
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off",
    "no-console": "off",
    "spaced-comment": "off",
    "no-else-return": "off",
    "import/prefer-default-export": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always"
      }
    ],
    "no-unused-vars": "warn",
    "no-undef": "off",
    "import/named": "warn",
    "no-nested-ternary": "off",
    "quotes": ["off", "double"]
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "overrides": [
    {
      "env": {
        "node": true
      },
      "files": [".eslintrc.{js,cjs}"],
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  }
}